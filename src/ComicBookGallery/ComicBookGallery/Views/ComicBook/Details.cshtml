@model ComicBookGallery.Models.ComicBook

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.DisplayText;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@Model.SeriesTitle</h1>
        <h2>Issue #@Model.IssueNumber </h2>

        <h5>Description:</h5>
        <div>@Html.Raw(Model.DescriptionHtml)</div>
    </div>
    @if (Model.Artists.Length > 0) { 
    <div>
        <ul>
            @foreach (var arstist in Model.Artists)
            {
                <li>@arstist.Role: @arstist.Name  </li>
            }
        </ul>
    </div>
    }
</body>
</html>
